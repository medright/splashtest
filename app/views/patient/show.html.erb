

<article>
  <header>
    <h1><%= @patient.name %></h1>
  </header>
  <h2>First Name:</h2>
  <p>
    <%= @patient.first_name %>
  </p>
  <h3>Last Name:</h3>
  <p>
    <%= @patient.last_name %>
  </p>
  <h3>DOB:</h3>
  <p>
    <%= @patient.dob %>
  </p>
