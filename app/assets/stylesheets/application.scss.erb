body {
	margin: 2px;
	overflow: auto;
	font-family: 'Raleway', sans-serif;
	font-weight: 300;
}

.content .signin {
   background-image: url(<%= asset_path 'ev_login.jpg' %>);
   background-size: 100%;
   background-repeat: no-repeat;
   height: 80vh;	
}

.content .signup {
   background-image: url(<%= asset_path 'ev_signup.jpg' %>);
   background-size: 100%;
   background-repeat: no-repeat;
   height: 80vh;	
}

.body, .content, h1, .signup {
	display: flex;
	display: inline-block;
}

.body, .content, h1, .signin {
	display: flex;
	display: inline-block;
	margin: 0;
}

.body, .content, ul, .signin {
	margin: 0;
}

.topbar {
	display: -webkit-flex;
	display: flex;
	flex-wrap: nowrap;
	flex-direction: row;
	border: 1px solid #99CCFF;
	width: 100vw;
	height: 20vh;
	color: #FF6600;
	float: right; 
}

.rtbar {
	display: -webkit-flex;
	display: inline-flex;
	flex-direction: column;
	flex-wrap: nowrap;
	flex-grow: 1;
	column-count: 1;
	overflow: auto;
	border: 1px solid #99CCFF;
	width: 10vw;
	height: 77vh;
	position: fixed;
	right: 0px;
	top: 22vh;
	color: #FF6600;
}

a {
	color: #00FFFF;
}

.toptile a {
	display: -webkit-flex;
	display: flex;
	color: #FF6600;
	background-size: auto;
	flex-grow: 1;
	border: 1px dotted black;
}

.rttile a {
	display: -webkit-flex;
	display: flex;
	flex-grow: 1;
	column-count: 1;
	color: #FF6600;
	background-size: auto;
	border: 1px dotted black;
}

.content {
	display: -webkit-flex;
	display: flex;
	background-size: 100%;
	background-color: #707074;
	position: fixed;
	top: 22vh;
	width: 89vw;
	height: 77vh; 
	border: 0.5px solid black;
	flex-direction: column;
	flex-grow: 1;
	overflow: auto;
	column-count: 1;
	color: white;
	margin-left: 1px;
	padding: 2px;
}



.code {
	margin: 0;
	padding: 0;
	overflow: auto;	
	color: white;
}

.form_ul {
	display: -webkit-flex;
	display: flex;
	flex-wrap: wrap;
	margin: 0;
	padding: 0;
	overflow: auto;
	height: 60vh;
}

.index {
	display: -webkit-flex;
	display: flex;
	flex-direction: column;
	height: 74vh;
}

div {
	display: -webkit-flex;
	display: flex;
}

/**********************************
TOPTILE
***********************************/

.toptile {
	display: -webkit-flex;
	height: 20vh;
	width: 25vw;
	background: #00FFFF;
	border: 1px solid #00E6B8;
	float: right;
	overflow: auto;
	display: flex;
	flex-wrap: nowrap;
	text-align: center;
	white-space: nowrap;
}

.user {
	flex-direction: column;
}

/**********************************
RTTILE
***********************************/

.rttile {
	display: flex;
	width: 10vw;
	height: 25vh;
	background: #00FFFF;
	border: 1px solid #00E6B8;
	display: flex;
	flex-direction: column;
	text-align: center;
	flex-grow: 1;
	column-count: 1;
}

.content label {
	color: #00FFFF;
}





