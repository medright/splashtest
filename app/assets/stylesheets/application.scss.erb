body {
	margin: 0;
	overflow: scroll;
}

.content .signin {
   background-image: url(<%= asset_path 'ev_login.jpg' %>);
   background-size: 100%;
   background-repeat: no-repeat;
   height: 80vh;	
}

.content .signup {
   background-image: url(<%= asset_path 'evrsignup.jpg' %>);
   background-size: 100%;
   background-repeat: no-repeat;
   height: 80vh;	
}

.body, .content, h1, .signup {
	display: inline-block;
}

.body, .content, h1, .signin {
	display: inline-block;
	margin: 0;
}

.body, .content, ul, .signin {
	margin: 0;
}

.topbar {
	display: -webkit-flex;
	flex-wrap: nowrap;
	border: 1px solid red;
	width: 100vw;
	height: 18vh;
	color: #FF6600; 
}

.rtbar {
	display: -webkit-flex;
	flex-direction: column;
	flex-wrap: nowrap;
	flex-grow: 1;
	flex: 0 1 auto;
	column-count: 1;
	overflow: scroll;
	border: 1px #B2F0B2 solid;
	width: 10vw;
	height: 80vh;
	position: fixed;
	right: 0px;
	top: 22vh;
	color: #FF6600;
}

a {
	color: #00FFFF;
}

.toptile a {
	display: -webkit-flex;
	color: #FF6600;
	background-size: auto;
	flex-grow: 1;
	border: 1px solid black;
}

.rttile a {
	display: -webkit-flex;
	column-count: 1;
	color: #FF6600;
	background-size: auto;
	flex-grow: 1;
	border: 1px solid black;
}

.content {
	display: -webkit-flex;
	background-size: 100%;
	background-color: #707074;
	position: fixed;
	top: 22vh;
	width: 89vw; 
	border: 0.5px solid red;
	flex-direction: column;
	flex-grow: 1;
	overflow: scroll;
	column-count: 1;
	color: white;
}



.code {
	margin: 0;
	padding: 0;
	overflow: auto;	
	color: white;
}

.form_ul {
	display: flex;
	flex-wrap: wrap;
	margin: 0;
	padding: 0;
	overflow: scroll;
	height: 60vh;
}

.index {
	display: -webkit-flex;
	flex-direction: column;
	height: 74vh;
}

div {
	display: -webkit-flex;
}

/**********************************
TOPTILE
***********************************/

.toptile {
	height: 20vh;
	width: 25vw;
	background: #00FFFF;
	border: 1px solid red;
	float: right;
	overflow: auto;
	display: -webkit-flex;
}

.user {
	flex-direction: column;
}

/**********************************
RTTILE
***********************************/

.rttile {
	width: 10vw;
	height: 33vh;
	background: #00FFFF;
	border: 1px solid red;
	display: -webkit-flex;
	
	
}

.content label {
	color: #00FFFF;
}





